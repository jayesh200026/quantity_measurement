<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdditionFragment"
    android:background="@color/fragment2">

    <!-- TODO: Update blank fragment layout -->


    <Spinner
        android:id="@+id/addMainSpinner"
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="40dp"
        />

    <EditText
        android:id="@+id/addInput1"
        android:layout_width="72dp"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="140dp"
        android:background="@color/Linen"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="140dp"
        android:text="+"
        android:textSize="40sp"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/addInput2"
        android:layout_width="72dp"
        android:layout_height="45dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="140dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:background="@color/Linen"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="140dp"
        android:text="="
        android:textSize="40sp"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/addResult"
        android:layout_width="91dp"
        android:layout_height="45dp"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="140dp"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:background="@color/black"
        android:textColor="@color/white"/>

    <Spinner
        android:id="@+id/addSpinner1"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="210dp" />

    <Spinner
        android:id="@+id/addSpinner2"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="210dp"/>

    <Spinner
        android:id="@+id/addResultSpinner"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="290dp"
        />
</FrameLayout>